@model IEnumerable<AspNetCoreQueryBuilderApp.Models.DataSourceModel>

@{
    ViewData["Title"] = "Query Builder";
}

<form method="post">
    <div class="d-flex" style="margin: 10px;">
        <h4 class="mr-auto">Data Sources</h4>
        <div class="btn-group">
            <button type="submit" asp-controller="Home" asp-action="QueryBuilder" class="btn btn-primary btn-xs">
                Add new data source
            </button>
            @if(Model.Count() > 0) {
            <button type="submit" asp-controller="Report" asp-action="Design" class="btn btn-primary btn-xs">
                Add new report
            </button>
            }
        </div>
    </div>
    <ul class="list-group">
        @foreach(var item in Model) {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @item.Title
            <div class="float-right action-buttons">
                <div class="btn-group float-right">
                    <button type="submit" asp-controller="Home" asp-action="QueryBuilder" asp-route-dataConnectionName=@item.DataConnectionName asp-route-dataSourceId=@item.DataSourceId asp-route-title=@item.Title class="btn btn-primary btn-xs">
                        Edit
                    </button>
                    <button type="submit" asp-controller="Home" asp-action="RemoveDataSource" asp-route-dataSourceId=@item.DataSourceId class="btn btn-primary btn-xs">
                        Remove
                    </button>
                </div>
            </div>
        </li>
        }
    </ul>
</form>
